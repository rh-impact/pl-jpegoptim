{
    "force": {
        "type": "bool",
        "action": "store_true",
        "help": "force optimization",
        "dest": "force"
    },
    "max": {
        "type": "int",
        "default": 100,
        "help": "set maximum image quality factor (disables lossless optimization mode, which is by default on) Valid quality values: 0 - 100",
        "dest": "max"
    },
    "noaction": {
        "type": "bool",
        "action": "store_true",
        "help": "don't really optimize files, just print results",
        "dest": "noaction"
    },
    "size": {
        "type": "str",
        "default": "99%",
        "help": "Try to optimize file to given size (disables lossless optimization mode). Target size is specified either in kilo bytes (1 - n) or as percentage (1% - 99%)",
        "dest": "size"
    },
    "csv": {
        "type": "bool",
        "action": "store_true",
        "help": "print progress info in CSV format",
        "dest": "csv"
    },
    "preserve": {
        "type": "bool",
        "action": "store_true",
        "help": "preserve file timestamps",
        "dest": "preserve"
    },
    "preserve-perms": {
        "type": "bool",
        "action": "store_true",
        "help": "preserve original file permissions by overwriting it",
        "dest": "preserve-perms"
    },
    "quiet": {
        "type": "bool",
        "action": "store_true",
        "help": "quiet mode",
        "dest": "quiet"
    },
    "totals": {
        "type": "bool",
        "action": "store_true",
        "help": "print totals after processing all files",
        "dest": "totals"
    },
    "verbose": {
        "type": "bool",
        "action": "store_true",
        "help": "enable verbose mode (positively chatty)",
        "dest": "verbose"
    },
    "version": {
        "type": "bool",
        "action": "store_true",
        "help": "print program version",
        "dest": "version"
    },
    "strip-all": {
        "type": "bool",
        "action": "store_true",
        "help": "strip all markers from output file",
        "dest": "strip-all"
    },
    "strip-none": {
        "type": "bool",
        "action": "store_true",
        "help": "do not strip any markers",
        "dest": "strip-none"
    },
    "strip-com": {
        "type": "bool",
        "action": "store_true",
        "help": "strip Comment markers from output file",
        "dest": "strip-com"
    },
    "strip-exif": {
        "type": "bool",
        "action": "store_true",
        "help": "strip Exif markers from output file",
        "dest": "strip-exif"
    },
    "strip-iptc": {
        "type": "bool",
        "action": "store_true",
        "help": "strip IPTC/Photoshop (APP13) markers from output file",
        "dest": "strip-iptc"
    },
    "strip-icc": {
        "type": "bool",
        "action": "store_true",
        "help": "strip ICC profile markers from output file",
        "dest": "strip-icc"
    },
    "strip-xmp": {
        "type": "bool",
        "action": "store_true",
        "help": "strip XMP markers markers from output file",
        "dest": "strip-xmp"
    },
    "all-normal": {
        "type": "bool",
        "action": "store_true",
        "help": "force all output files to be non-progressive",
        "dest": "all-normal"
    },
    "all-progressive": {
        "type": "bool",
        "action": "store_true",
        "help": "force all output files to be progressive",
        "dest": "all-progressive"
    }
}